rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isUserAuthenticated() {
      return request.auth != null;
    }

    function isRequestingOwnData(userId) {
      return request.auth.uid == userId;
    }

    function isUserAdmin(userId) {
      return isUserAuthenticated() && exists(/databases/$(database)/documents/usuarios/$(userId)) && get(/databases/$(database)/documents/usuarios/$(userId)).data.role == 'admin';
    }

    match /ejercicios_futsal/{ejercicioId} {
      allow read: if true;
      allow write: if isUserAdmin(request.auth.uid);
    }
    
    match /usuarios/{userId} {
      allow read, update, delete: if isRequestingOwnData(userId) || isUserAdmin(request.auth.uid);
      allow create: if isRequestingOwnData(userId);
    }

    match /usuarios/{userId}/{subcollection}/{document=**} {
      allow read, write: if isRequestingOwnData(userId);
    }

    match /support_chats/{chatId} {
        allow read, write: if isUserAuthenticated() && (isRequestingOwnData(get(/databases/$(database)/documents/support_chats/$(chatId)).data.userId) || isUserAdmin(request.auth.uid));
        allow create: if isUserAuthenticated();
    }

    match /mis_sesiones/{sesionId} {
        allow read, write, delete: if isUserAuthenticated() && isRequestingOwnData(resource.data.userId);
        allow create: if isUserAuthenticated();
    }

    match /partidos_estadisticas/{partidoId} {
        allow read, write, delete: if isUserAuthenticated() && isRequestingOwnData(resource.data.userId);
        allow create: if isUserAuthenticated();
    }
  }
}
