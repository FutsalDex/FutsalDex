rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can manage their own user document, favorites, and team roster.
    match /usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      match /user_favorites/{exerciseId} {
        allow read, write: if request.auth.uid == userId;
      }

      match /team/{teamDocId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Exercises can be read by anyone, but only modified by an admin.
    match /ejercicios_futsal/{exerciseId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'admin';
    }

    // Users can create, read, update, and delete their own sessions.
    match /mis_sesiones/{sessionId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Users can create, read, update, and delete their own match statistics.
    match /partidos_estadisticas/{partidoId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}