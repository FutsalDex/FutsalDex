rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Colecciones Públicas con Escritura Restringida ---
    
    // La colección de ejercicios es de lectura para usuarios autenticados.
    // La escritura está limitada a los administradores.
    match /ejercicios_futsal/{exerciseId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'admin';
    }

    // --- Datos de Usuario ---

    match /usuarios/{userId} {
      // Un usuario puede leer y escribir en su propio documento.
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Un administrador puede leer y listar los perfiles de cualquier usuario para gestionarlos.
      allow get, list: if request.auth != null && get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'admin';

      // Un usuario solo puede acceder a sus propias subcolecciones.
      match /{subcollection}/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // --- Colecciones Específicas del Usuario (Sesiones, Partidos, etc.) ---
    
    // Un usuario solo puede crear, leer, actualizar o borrar los documentos que le pertenecen.
    match /{collectionId}/{docId} {
      allow read, write, update, delete, list: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
