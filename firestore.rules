
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read access to exercises, but only admins can write.
    match /ejercicios_futsal/{exerciseId} {
      allow read: if true;
      allow write: if request.auth.token.email == 'futsaldex@gmail.com';
    }

    // Users can manage their own sessions.
    match /mis_sesiones/{sessionId} {
      allow read, update, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }

    // Users can read/update their own user document.
    // Admin can read/write any user document.
    match /usuarios/{userId} {
      allow read, update: if request.auth.uid == userId || request.auth.token.email == 'futsaldex@gmail.com';
      allow create: if request.auth.uid == userId;
      
      // Users can manage their own favorites list.
      match /user_favorites/{exerciseId} {
         allow read, write: if request.auth.uid == userId;
      }
    }
    
    // Users can manage their own match statistics.
    match /partidos_estadisticas/{matchId} {
        allow read, update, delete: if request.auth.uid == resource.data.userId;
        allow create: if request.auth.uid == request.resource.data.userId;
    }
  }
}
