rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role safely.
    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/usuarios/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'admin';
    }

    // GLOBAL READ RULE: Anyone can read any document.
    // This is the key change to fix the permission errors.
    match /{path=**} {
      allow read: if true;
    }

    // SECURE WRITE RULES:
    // Only admins can write to the exercises collection.
    match /ejercicios_futsal/{exerciseId} {
      allow write: if isAdmin();
    }

    // A user can write to their own user document.
    match /usuarios/{userId} {
      allow write: if request.auth.uid == userId;
    }

    // A user can manage their own favorites.
    match /usuarios/{userId}/user_favorites/{favId} {
      allow write: if request.auth.uid == userId;
    }

    // A user can manage their own sessions.
    match /mis_sesiones/{sessionId} {
      // Allow create if the user is the owner.
      allow create: if request.resource.data.userId == request.auth.uid;
      // Allow update/delete if the user is the owner.
      allow update, delete: if resource.data.userId == request.auth.uid;
    }
  }
}
