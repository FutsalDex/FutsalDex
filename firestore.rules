rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // REGLA GLOBAL DE LECTURA:
    // Permite que cualquier usuario (autenticado o no) lea cualquier documento.
    // Esto soluciona los errores de "permisos insuficientes" en la aplicaci√≥n.
    match /{document=**} {
      allow read: if true;
    }

    // REGLAS DE ESCRITURA SEGURAS:

    // Ejercicios: Solo los administradores pueden escribir.
    match /ejercicios_futsal/{exerciseId} {
      allow write: if request.auth != null && get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'admin';
    }

    // Perfiles de Usuario: Los usuarios solo gestionan sus propios datos.
    match /usuarios/{userId} {
      // Un usuario puede crear su propio perfil.
      allow create: if request.auth.uid == userId;
      // Un usuario puede actualizar su propio perfil, pero no cambiar su rol.
      allow update: if request.auth.uid == userId && request.resource.data.role == resource.data.role;
      // Solo un administrador puede eliminar un usuario.
      allow delete: if request.auth != null && get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'admin';
    }

    // Sesiones: Los usuarios solo gestionan sus propias sesiones.
    match /mis_sesiones/{sessionId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Favoritos: Los usuarios solo gestionan sus propios favoritos.
    match /usuarios/{userId}/user_favorites/{exerciseId} {
      allow create, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
