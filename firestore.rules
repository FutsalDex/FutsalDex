
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Reglas para la colección de usuarios
    match /usuarios/{userId} {
      // Un usuario solo puede leer y escribir sus propios datos
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Un usuario solo puede leer y escribir en sus propias subcolecciones
      match /{subcollection}/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Reglas para la colección de ejercicios
    match /ejercicios_futsal/{exerciseId} {
      // CUALQUIERA puede leer los ejercicios (es información pública)
      allow read: if true;
      // SOLO los usuarios autenticados pueden crear, actualizar o eliminar ejercicios
      // (Se refinará más adelante para que solo los admins puedan hacerlo desde el backend)
      allow write: if request.auth != null;
    }

    // Reglas para las sesiones guardadas por los usuarios
    match /mis_sesiones/{sessionId} {
      // Un usuario solo puede leer y escribir sus propias sesiones
      allow read, write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Reglas para los partidos guardados por los usuarios
    match /partidos_estadisticas/{partidoId} {
      // Un usuario solo puede leer y escribir sus propios partidos
      allow read, write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Reglas para el chat de soporte
    match /support_chats/{chatId} {
        // Un usuario puede leer y escribir en sus propios chats
        allow read, write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
