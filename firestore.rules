rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Exercises are public to read, but only admins can write.
    match /ejercicios_futsal/{exerciseId} {
      allow get, list: if true;
      allow write: if get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Users can read and write to their own user document and its subcollections (like favorites).
    match /usuarios/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // Rules for the top-level sessions collection.
    match /mis_sesiones/{sessionId} {
      // A user can get a specific session if they are the owner.
      allow get: if request.auth.uid == resource.data.userId;
      
      // An authenticated user can list sessions. 
      // The query in the app MUST secure this with a `where("userId", "==", uid)` clause.
      allow list: if request.auth.uid != null; 
      
      // A user can create a session if they set themselves as the owner.
      allow create: if request.auth.uid == request.resource.data.userId;
      
      // A user can update/delete a session if they are the owner of the existing document.
      allow update, delete: if request.auth.uid == resource.data.userId;
    }
  }
}
