rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only manage their own profile document
    match /usuarios/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    // User-specific subcollections
    match /usuarios/{userId}/{collection}/{docId} {
       allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Exercises are public to read for everyone, only admins can write
    match /ejercicios_futsal/{exerciseId} {
      allow read: if true;
      // Admin write access is handled by server-side actions with Admin SDK
      // No client-side write rules needed here.
      allow write: if false; 
    }

    // Allow users to list and access their own sessions
    match /mis_sesiones/{sessionId} {
      allow read, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }

    // Allow users to list and access their own matches
    match /partidos_estadisticas/{matchId} {
      allow read, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update: if request.auth.uid == resource.data.userId;
    }

    // Allow users to access their own support chats
    match /support_chats/{chatId} {
       allow read, write: if request.auth.uid == resource.data.userId;
    }
  }
}
